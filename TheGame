         spacer = input()
         print('You:   Hows it going Kazzah? I am looking for a few things that you might have.')
         spacer = input()
         print('Kazzah:   What would you like to look at?')
         spacer = input()
         print('')
         print('You look around and Kazzah has the following categories')
         print('a. Health Management   b. Armour   c. Weapons')
         storeCat = input()
         
         if storeCat == 'a':
              Health()
         elif storeCat == 'b':
              Armour()
         elif storeCat == 'c':
              Weapons()




def Health():
        print('----------------Health Management---------------')
        print('Health Potion - 100g')
        print('Apple - 30g')
        print('Warp Stone - 3000g')
        HM = input()
        print('')
        print('I see you chose ' + HM + '.')

        if HM == 'Apple' or 'apple' or 'ap':
             HM = int(30)
        elif HM == 'Health Potion' or 'health potion' or 'hp':
             HM = int(100)
        elif HM == 'Warp Stone' or 'warp stone' or 'ws':
             HM = 3000
        else:
             print('That is not a valid choice')
             spacer = input()
             GeneralStore1()
        print('How many do you want?')
        storeMulti = input()
        total_cost = HM * int(storeMulti)
        print('That will be {} gold pieces.'.format(total_cost))
#Need to subtract gold from the backpack to not go below 0

        print('Can  I get you anything else?')
        HMyn = input() ####HMyn is Health management Yes or No
        if HMyn == 'no' or 'No':
             print('Thanks, ' + name + ', See ya soon.')
             GameStart()

