def GameStart():
     print('--------------------------------------------------------------------------')
     print('You stare ahead out in the distance and decide what you will do next')
     print('--------------------------------------------------------------------------')     

     print('Greetings, Adventurer ' + name + ', what would you like to do?')
     print('')
     print('a. Go adventuring of course!')
     print('b. I want to go to the general store')
     print('c. I want to go home.. I am too scared')
     print('d. Commit suicide. Living in this world is too stressful')
     answer1 = input()

     if answer1 == 'a':
        Adventure1()
     elif answer1 == 'b':
          GeneralStore1()
     elif answer1 == 'c':
          GoHome()
     elif answer1 == 'd':
          Die()

